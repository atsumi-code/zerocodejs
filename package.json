{
  "name": "zerocodejs",
  "version": "1.0.1-beta.3",
  "description": "ZeroCode.js - フレームワーク非依存のWeb ComponentsのCMSフロントエンドライブラリ",
  "type": "module",
  "main": "./dist/zerocode.umd.js",
  "module": "./dist/zerocode.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/zerocode.es.js",
      "require": "./dist/zerocode.umd.js"
    },
    "./style.css": "./dist/style.css",
    "./zcode-cms.css": "./dist/zcode-cms.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:pages": "vite --config vite.pages.config.ts",
    "build": "vue-tsc && vite build",
    "build:pages": "vite build --config vite.pages.config.ts",
    "preview": "vite preview",
    "preview:pages": "vite preview --config vite.pages.config.ts --outDir dist-pages",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@monaco-editor/loader": "^1.6.1",
    "@tiptap/extension-bold": "^3.10.7",
    "@tiptap/extension-bullet-list": "^3.10.7",
    "@tiptap/extension-document": "^3.10.7",
    "@tiptap/extension-hard-break": "^3.10.7",
    "@tiptap/extension-italic": "^3.10.7",
    "@tiptap/extension-link": "^3.10.7",
    "@tiptap/extension-list-item": "^3.10.7",
    "@tiptap/extension-ordered-list": "^3.10.7",
    "@tiptap/extension-paragraph": "^3.10.7",
    "@tiptap/extension-strike": "^3.10.7",
    "@tiptap/extension-text": "^3.10.7",
    "@tiptap/starter-kit": "^3.10.7",
    "@tiptap/vue-3": "^3.10.7",
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.3.0",
    "jsdom": "^27.2.0",
    "lucide-vue-next": "^0.553.0",
    "monaco-editor": "^0.55.1",
    "vue-i18n": "^9.14.5"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/ui": "^4.0.17",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.0",
    "happy-dom": "^20.3.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.17",
    "vue": "^3.4.0",
    "vue-tsc": "^3.1.0"
  },
  "keywords": [
    "cms",
    "web-components",
    "vue",
    "visual-editor",
    "no-code",
    "low-code",
    "wysiwyg"
  ],
  "author": "Atsumi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/atsumi-code/zerocodejs"
  },
  "homepage": "https://github.com/atsumi-code/zerocodejs#readme"
}
